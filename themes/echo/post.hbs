{{!< default}}

{{! This is a post template. It displays a single post that the user selected from the home page template. }}

    <article class="{{post_class}}">

        {{! Everything inside the #post tags pulls data from the post }}
        {{#post}}

        <section class="post-content">            
            {{> post-meta}}
            <h1 class="post-title">{{{title}}}</h1>
            <section class="post-content-output">{{content}}</section>
        </section>

        <div class="post-footer">
            <section class="share-buttons">
                <a href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}"
                    onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                    <i class="icon-facebook"></i>
                </a>
                <a href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                    <i class="icon-twitter"></i>
                </a>
                <a href="https://plus.google.com/share?url={{url absolute="true"}}"
                    onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                    <i class="icon-google-plus"></i>
                </a>
            </section>
        </div>

        <div class="comments">
            <div class="show-comments">Show Comments</div>
            <div id="disqus_thread"></div>
        </div>

        {{/post}}

    </article>